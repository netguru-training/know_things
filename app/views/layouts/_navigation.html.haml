%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Know Things', root_path, class: 'navbar-brand'
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      - if user_signed_in?
        %ul.nav.navbar-nav.navbar-left
          %li
            = link_to 'Make a Question',  new_discussion_path
          %li
            = link_to discussions_mine_path do
              Questions to me
              %span.label.label-danger.label-as-badge 3
          %li
            = link_to 'Browse Questions', discussions_path
        %ul.nav.navbar-nav.navbar-right
          %form.navbar-form.navbar-left{role: "search"}
            .form-group
              %input.form-control{placeholder: "Search", type: "text"}/
          %li
            = link_to 'Logout', destroy_user_session_path, method: :delete
      - else
        %ul.nav.navbar-nav.navbar-left
          %li
            = link_to 'Make a Question', new_discussion_path
          %li
            = link_to 'Browse Questions', discussions_path
        %ul.nav.navbar-nav.navbar-right
          %form.navbar-form.navbar-left{role: "search"}
            .form-group
              %input.form-control{placeholder: "Search", type: "text"}/
          %li
            = link_to 'Sign in', new_user_session_path
          %li
            = link_to 'Sign up', new_user_registration_path
